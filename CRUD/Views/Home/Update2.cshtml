@model SalaJuntas
@{
    Layout = "_Layout";
    var title = "Actualizar SalaJuntas ";
    ViewData["Title"] = title;
}
<style>
    .input-validation-error {
        border-color: red;
    }
</style>
<h2>@title</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <input asp-for="Sala" class="form-control" />
                <span asp-validation-for="Sala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreEmpleado" class="control-label"></label>
                <input asp-for="NombreEmpleado" class="form-control" />
                <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRecepcion" class="control-label">Fecha de ingreso</label>
                <input asp-for="FechaRecepcion" type="date" class="form-control" />
                <span asp-validation-for="FechaRecepcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPersonas" class="control-label"></label>
                <input asp-for="TotalPersonas" class="form-control" />
                <span asp-validation-for="TotalPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Contact">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

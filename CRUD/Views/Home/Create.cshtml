@model CRUD.Models.Empleados

@{
    Layout = "_Layout";
    var title = "Crear Empleado";
    ViewData["Title"] = title;
}
<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<h2>@title</h2>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Habilidades" class="control-label"></label>
                <select asp-for="Habilidades" class="form-control">
                    <option disabled>Selecciona una opción</option>
                    <option>Programacion Web</option>
                    <option>Promacion Orientada Objetos</option>
                    <option>Redes</option>
                    <option>Aplicaciones Moviles</option>


                </select>
                <span asp-validation-for="Habilidades" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salario" class="control-label"></label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" style="color:chocolate" />
            </div>
        </form>
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    </div>
</div>

<div>
    <a asp-action="About">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
